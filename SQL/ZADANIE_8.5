-- Lista zadań z nazwami list zadań
SELECT I.*, IL.NAME AS LIST_NAME
FROM ISSUES AS I
JOIN ISSUESLISTS AS IL ON I.ISSUESLIST_ID = IL.ID;

-- Lista zadań z przypisanymi użytkownikami
SELECT I.*, U.FIRSTNAME, U.LASTNAME
FROM ISSUES AS I
LEFT JOIN USERS AS U ON I.USER_ID_ASSIGNEDTO = U.ID;

-- Imiona i nazwiska użytkowników wraz z liczbą przypisanych zadań
SELECT U.FIRSTNAME, U.LASTNAME, COUNT(I.ID) AS NUM_ISSUES
FROM USERS AS U
LEFT JOIN ISSUES AS I ON U.ID = I.USER_ID_ASSIGNEDTO
GROUP BY U.FIRSTNAME, U.LASTNAME;
